<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="photo"
            type="com.example.spasdomuserapp.models.Photo" />
        <variable
            name="click"
            type="com.example.spasdomuserapp.ui.services.planned.categories.info.PhotoRemoveClick" />
        <variable
            name="uploadClick"
            type="com.example.spasdomuserapp.ui.services.planned.categories.info.PhotoUploadClick" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            style="@style/card_style_main"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_little"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintDimensionRatio="H,1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:onClick="@{() -> uploadClick.onClick(photo)}"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_upload_image_" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="-8dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> click.onClick(photo)}"
            app:layout_constraintEnd_toEndOf="@id/card1"
            app:layout_constraintTop_toTopOf="@id/card1"
            app:srcCompat="@drawable/ic_remove_circle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>