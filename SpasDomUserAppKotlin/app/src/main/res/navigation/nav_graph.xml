<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.spasdomuserapp.ui.home.HomeFragment"
        android:label="Главная"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_newsDetailedFragment"
            app:destination="@id/newsDetailedFragment" />
        <action
            android:id="@+id/action_homeFragment_to_servicesFragment"
            app:destination="@id/servicesFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.spasdomuserapp.ui.chat.ChatFragment"
        android:label="Чат"
        tools:layout="@layout/fragment_chat" >
        <action
            android:id="@+id/action_chatFragment_to_singleChatFragment"
            app:destination="@id/singleChatFragment" />
        <argument
            android:name="currentChat"
            app:argType="com.example.spasdomuserapp.ui.chat.Chat" />
    </fragment>
    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.example.spasdomuserapp.ui.payment.PaymentFragment"
        android:label="Оплата"
        tools:layout="@layout/fragment_payment" />
    <fragment
        android:id="@+id/servicesFragment"
        android:name="com.example.spasdomuserapp.ui.services.ServicesFragment"
        android:label="Услуги"
        tools:layout="@layout/fragment_services">
        <action
            android:id="@+id/action_servicesFragment_to_activePlannedDetailedFragment"
            app:destination="@id/activePlannedDetailedFragment" />
        <action
            android:id="@+id/action_servicesFragment_to_historyPlannedDetailedFragment"
            app:destination="@id/historyPlannedDetailedFragment" />
        <action
            android:id="@+id/action_servicesFragment_to_plannedCategoriesFragment"
            app:destination="@id/plannedCategoriesFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.spasdomuserapp.ui.profile.ProfileFragment"
        android:label="Профиль"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/newsDetailedFragment"
        android:name="com.example.spasdomuserapp.ui.home.NewsDetailedFragment"
        android:label="Новость подробно"
        tools:layout="@layout/fragment_news_detailed">
        <argument
            android:name="newsItem"
            app:argType="com.example.spasdomuserapp.models.NewsItem" />
    </fragment>
    <fragment
        android:id="@+id/plannedFragment"
        android:name="com.example.spasdomuserapp.ui.services.planned.planned.PlannedFragment"
        android:label="fragment_planned"
        tools:layout="@layout/fragment_planned" />
    <fragment
        android:id="@+id/historyPlannedDetailedFragment"
        android:name="com.example.spasdomuserapp.ui.services.planned.planned.HistoryPlannedDetailedFragment"
        android:label="fragment_history_planned_detailed"
        tools:layout="@layout/fragment_history_planned_detailed">
        <argument
            android:name="historyPlannedOrder"
            app:argType="com.example.spasdomuserapp.models.PlannedOrder" />
    </fragment>
    <fragment
        android:id="@+id/activePlannedDetailedFragment"
        android:name="com.example.spasdomuserapp.ui.services.planned.planned.ActivePlannedDetailedFragment"
        android:label="fragment_active_planned_detailed"
        tools:layout="@layout/fragment_active_planned_detailed">
        <argument
            android:name="activePlannedOrder"
            app:argType="com.example.spasdomuserapp.models.PlannedOrder" />
    </fragment>
    <fragment
        android:id="@+id/plannedCategoriesFragment"
        android:name="com.example.spasdomuserapp.ui.services.planned.categories.lvl1.PlannedCategoriesFragment"
        android:label="Выберите категорию"
        tools:layout="@layout/fragment_planned_categories">
        <action
            android:id="@+id/action_plannedCategoriesFragment_to_plannedCategoriesLvl2Fragment"
            app:destination="@id/plannedCategoriesLvl2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/plannedCategoriesLvl2Fragment"
        android:name="com.example.spasdomuserapp.ui.services.planned.categories.lvl2.PlannedCategoriesLvl2Fragment"
        android:label="{categoryName}"
        tools:layout="@layout/fragment_planned_categories_lvl2">
        <argument
            android:name="category"
            app:argType="com.example.spasdomuserapp.models.PlannedCategory" />
        <argument
            android:name="categoryName"
            app:argType="string" />
        <action
            android:id="@+id/action_plannedCategoriesLvl2Fragment_to_plannedInfoFragment"
            app:destination="@id/plannedInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/plannedInfoFragment"
        android:name="com.example.spasdomuserapp.ui.services.planned.categories.info.PlannedInfoFragment"
        android:label="{categoryName}"
        tools:layout="@layout/fragment_planned_info">
        <argument
            android:name="category"
            app:argType="com.example.spasdomuserapp.models.PlannedCategory" />
        <argument
            android:name="categoryName"
            app:argType="string" />
        <action
            android:id="@+id/action_plannedInfoFragment_to_plannedDateFragment"
            app:destination="@id/plannedDateFragment" />
    </fragment>
    <fragment
        android:id="@+id/plannedDateFragment"
        android:name="com.example.spasdomuserapp.ui.services.planned.categories.date.PlannedDateFragment"
        android:label="fragment_planned_date"
        tools:layout="@layout/fragment_planned_date">
        <argument
            android:name="categoryName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/singleChatFragment"
        android:name="com.example.spasdomuserapp.ui.chat.singlechat.SingleChatFragment"
        android:label="fragment_single_chat"
        tools:layout="@layout/fragment_single_chat" >
        <argument
            android:name="currentChat"
            app:argType="com.example.spasdomuserapp.ui.chat.Chat" />
    </fragment>

</navigation>