<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textProblem"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_normal"
        android:paddingTop="@dimen/spacing_large"
        android:text="Тип заказа"
        android:textColor="@color/secondaryColor"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/txProblem"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Проверка счетчиков"
        app:layout_constraintTop_toBottomOf="@+id/textProblem"
        android:paddingTop="@dimen/spacing_tiny"
        android:paddingStart="@dimen/spacing_normal"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/textAddress"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_normal"
        android:paddingTop="@dimen/spacing_normal"
        android:text="Адрес"
        android:textColor="@color/secondaryColor"
        app:layout_constraintTop_toBottomOf="@id/txProblem"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/txAddress"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Станиславского 4"
        app:layout_constraintTop_toBottomOf="@+id/textAddress"
        android:paddingTop="@dimen/spacing_tiny"
        android:paddingStart="@dimen/spacing_normal"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/textDate"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_normal"
        android:paddingTop="@dimen/spacing_normal"
        android:text="Дата"
        android:textColor="@color/secondaryColor"
        app:layout_constraintTop_toBottomOf="@id/txAddress"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/txDate"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Суббота. 24.11.2020"
        app:layout_constraintTop_toBottomOf="@+id/textDate"
        android:paddingTop="@dimen/spacing_tiny"
        android:paddingStart="@dimen/spacing_normal"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/textTime"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_normal"
        android:paddingTop="@dimen/spacing_normal"
        android:text="Время"
        android:textColor="@color/secondaryColor"
        app:layout_constraintTop_toBottomOf="@id/txDate"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/txTime"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="10:00 - 11:00"
        app:layout_constraintTop_toBottomOf="@+id/textTime"
        android:paddingTop="@dimen/spacing_tiny"
        android:paddingStart="@dimen/spacing_normal"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/textId"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_normal"
        android:paddingTop="@dimen/spacing_normal"
        android:text="Идентификатор"
        android:textColor="@color/secondaryColor"
        app:layout_constraintTop_toBottomOf="@id/txTime"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/txId"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="12345678"
        app:layout_constraintTop_toBottomOf="@+id/textId"
        android:paddingTop="@dimen/spacing_tiny"
        android:paddingStart="@dimen/spacing_normal"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/textStatus"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_normal"
        android:paddingTop="@dimen/spacing_normal"
        android:text="Статус"
        android:textColor="@color/secondaryColor"
        app:layout_constraintTop_toBottomOf="@id/txId"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/txStatus"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Не завершён"
        app:layout_constraintTop_toBottomOf="@+id/textStatus"
        android:paddingTop="@dimen/spacing_tiny"
        android:paddingStart="@dimen/spacing_normal"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/beginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Начать"
        android:textColor="@color/secondaryTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginRight="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_normal"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:stateListAnimator="@null"
        android:id="@+id/callButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_little"
        android:text="Звонок"
        android:textColor="@color/secondaryColor"
        app:layout_constraintBottom_toTopOf="@id/beginButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/spacing_normal"
        app:backgroundTint="@android:color/transparent"
        app:cornerRadius="4dp"
        app:rippleColor="#33AAAAAA"
        app:strokeColor="@color/grayMiddle"
        app:strokeWidth="2dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/chatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_little"
        android:stateListAnimator="@null"
        android:text="Чат"
        android:textColor="@color/secondaryColor"
        app:backgroundTint="@android:color/transparent"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toTopOf="@id/beginButton"
        app:layout_constraintEnd_toStartOf="@+id/supportButton"
        app:layout_constraintStart_toEndOf="@id/callButton"
        app:rippleColor="#33AAAAAA"
        app:strokeColor="@color/grayMiddle"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/supportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_little"
        android:stateListAnimator="@null"
        android:text="Поддержка"
        android:textColor="@color/secondaryColor"
        app:backgroundTint="@android:color/transparent"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toTopOf="@id/beginButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/spacing_normal"
        app:rippleColor="#33AAAAAA"
        app:strokeColor="@color/grayMiddle"
        app:strokeWidth="2dp" />


</androidx.constraintlayout.widget.ConstraintLayout>